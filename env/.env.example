# FastAPIアプリケーション環境変数設定テンプレート
# このファイルを.envにコピーして、必要に応じて値を更新してください

# アプリケーション基本設定
APP_NAME="FastAPI Basic Application"  # アプリケーション名
APP_VERSION="1.0.0"  # バージョン番号
APP_DESCRIPTION="A basic FastAPI application with modular structure"  # アプリケーション説明
DEBUG=true  # デバッグモード有効フラグ
ENVIRONMENT="development"  # 実行環境（development/production）

# サーバー設定
HOST="127.0.0.1"  # サーバーホストアドレス
PORT=8000  # サーバーポート番号
RELOAD=true  # ホットリロード有効フラグ

# セキュリティ設定
SECRET_KEY="your-secret-key-here-change-in-production"  # JWT署名用秘密鍵（本番環境では必ず変更）
ACCESS_TOKEN_EXPIRE_MINUTES=30  # アクセストークン有効期限（分）

# データベース設定（将来の拡張用）
DATABASE_URL="sqlite:///./app.db"  # SQLiteデータベース接続URL

# 外部API設定（将来の統合用）
OPENAI_API_KEY="your-openai-api-key-here"  # OpenAI APIキー（議事録生成機能で使用）
OPENAI_MODEL="gpt-4"  # OpenAI使用モデル（gpt-4, gpt-3.5-turbo等）
OPENAI_MAX_TOKENS=2000  # OpenAI最大トークン数（生成される文章の長さ制限）
OPENAI_TEMPERATURE=0.7  # OpenAI生成温度（0.0-2.0、高いほど創造的）

# ログ設定
LOG_LEVEL="INFO"  # ログレベル（DEBUG/INFO/WARNING/ERROR）
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"  # ログ出力フォーマット

# CORS設定（クロスオリジンリクエスト許可）
CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080"  # 許可するオリジンのリスト
CORS_ALLOW_CREDENTIALS=true  # 認証情報送信許可フラグ
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS"  # 許可するHTTPメソッド
CORS_ALLOW_HEADERS="*"  # 許可するHTTPヘッダー

# ファイルアップロード設定
MAX_FILE_SIZE=10485760  # 最大ファイルサイズ（10MB）
UPLOAD_DIR="./uploads"  # アップロードファイル保存ディレクトリ
